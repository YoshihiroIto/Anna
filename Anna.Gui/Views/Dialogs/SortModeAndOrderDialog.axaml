<Window x:Class="Anna.Gui.Views.Dialogs.SortModeAndOrderDialog"
        Classes="dialog"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:Anna.Gui.Views.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dialogs="clr-namespace:Anna.Gui.Views.Dialogs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:strings="clr-namespace:Anna.Strings;assembly=Anna.Strings"
        Title="{x:Static strings:Resources.DialogTitle_EntrySort}"
        d:DesignHeight="400"
        d:DesignWidth="400"
        x:CompileBindings="True"
        x:DataType="dialogs:DialogViewModel"
        mc:Ignorable="d">
    <Window.Styles>
        <StyleInclude Source="/Views/Resources/Styles.axaml" />
    </Window.Styles>

    <Interaction.Behaviors>
        <behaviors:DialogBehavior />
    </Interaction.Behaviors>

    <StackPanel Spacing="12">
        <StackPanel.Styles>
            <Style Selector="Button">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
        </StackPanel.Styles>

        <Button Content="{x:Static strings:Resources.EntrySort_Mode_Name}" />
        <Button Content="{x:Static strings:Resources.EntrySort_Mode_Extension}" />
        <Button Content="{x:Static strings:Resources.EntrySort_Mode_Size}" />
        <Button Content="{x:Static strings:Resources.EntrySort_Mode_Timestamp}" />
        <Button Content="{x:Static strings:Resources.EntrySort_Mode_Attribute}" />

        <Rectangle Height="1"
                   HorizontalAlignment="Stretch"
                   Fill="#444444" />

        <Grid  ColumnDefinitions="*,*,*">
            <Button Grid.Column="0"
                    Margin="0,0,12,0"
                    Content="{x:Static strings:Resources.EntrySort_Order_Ascending}" />
            <Button Grid.Column="1"
                    Margin="0,0,12,0"
                    Content="{x:Static strings:Resources.EntrySort_Order_Descending}" />
            <Button Grid.Column="2" Content="{x:Static strings:Resources.Dialog_Cancel}" />
        </Grid>
    </StackPanel>
</Window>