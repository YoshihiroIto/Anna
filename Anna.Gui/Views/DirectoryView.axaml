<UserControl x:Class="Anna.Views.DirectoryView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Anna.ViewModels"
             xmlns:views="clr-namespace:Anna.Views"
             d:DesignHeight="450"
             d:DesignWidth="450"
             x:CompileBindings="True"
             x:DataType="viewModels:DirectoryViewViewModel"
             FontFamily="/Assets/UDEVGothicNF-Regular.ttf#UDEV Gothic NF"
             mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="TextBlock.File">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="TextBlock.Directory">
            <Setter Property="Foreground" Value="#FFBA6D" />
        </Style>

        <Style Selector="TextBlock.IsReadOnly">
            <Setter Property="Foreground" Value="#00FF00" />
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <ItemsControl Items="{Binding Entries, Mode=OneWay}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <views:EntryDataTemplateSelector>
                    <views:EntryDataTemplateSelector.FileDataTemplate>
                        <DataTemplate DataType="viewModels:EntryViewModel">
                            <StackPanel Height="17"
                                        Margin="24,0,0,0"
                                        Orientation="Horizontal">
                                <TextBlock Width="220"
                                           Classes="File"
                                           Classes.IsReadOnly="{Binding IsReadOnly^}"
                                           Text="{Binding Name, Mode=OneWay}"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Width="40"
                                           Classes="File"
                                           Classes.IsReadOnly="{Binding IsReadOnly^}"
                                           Text="{Binding Extension, Mode=OneWay}"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </DataTemplate>
                    </views:EntryDataTemplateSelector.FileDataTemplate>

                    <views:EntryDataTemplateSelector.DirectoryDataTemplate>
                        <DataTemplate DataType="viewModels:EntryViewModel">
                            <TextBlock Width="260"
                                       Height="17"
                                       Margin="24,0,0,0"
                                       Classes="Directory"
                                       Classes.IsReadOnly="{Binding IsReadOnly^}"
                                       Text="{Binding NameWithExtension, Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis" />
                        </DataTemplate>
                    </views:EntryDataTemplateSelector.DirectoryDataTemplate>
                </views:EntryDataTemplateSelector>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>