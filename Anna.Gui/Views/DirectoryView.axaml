<UserControl x:Class="Anna.Views.DirectoryView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Anna.Views.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Anna.ViewModels"
             xmlns:views="clr-namespace:Anna.Views"
             d:DesignHeight="450"
             d:DesignWidth="450"
             x:CompileBindings="True"
             x:DataType="viewModels:DirectoryViewViewModel"
             FontFamily="/Assets/UDEVGothicNF-Regular.ttf#UDEV Gothic NF"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:AttributeBrushConverter x:Key="AttributeBrushConverter"
                                            EmptyAttributeBrush="{DynamicResource EmptyAttributeBrush}"
                                            IsCompressedAttributeBrush="{DynamicResource IsCompressedAttributeBrush}"
                                            IsDirectoryAttributeBrush="{DynamicResource IsDirectoryAttributeBrush}"
                                            IsEncryptedAttributeBrush="{DynamicResource IsEncryptedAttributeBrush}"
                                            IsHiddenAttributeBrush="{DynamicResource IsHiddenAttributeBrush}"
                                            IsReadOnlyAttributeBrush="{DynamicResource IsReadOnlyAttributeBrush}"
                                            IsReparsePointAttributeBrush="{DynamicResource IsReparsePointAttributeBrush}"
                                            IsSystemAttributeBrush="{DynamicResource IsSystemAttributeBrush}" />
        <Geometry x:Key="ArrowPathData">
            M297.5 148.25 148 33.25v67H0v99h148v65z
        </Geometry>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBlock.entry">
            <Setter x:DataType="viewModels:EntryViewModel" Property="Foreground">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource AttributeBrushConverter}" ConverterParameter="{x:Static converters:AttributeBrushConverterBrushTypes.Foreground}">
                        <Binding Path="Attributes.Value" />
                        <Binding Path="IsOnCursor.Value" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>

            <Setter x:DataType="viewModels:EntryViewModel" Property="Background">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource AttributeBrushConverter}" ConverterParameter="{x:Static converters:AttributeBrushConverterBrushTypes.Background}">
                        <Binding Path="Attributes.Value" />
                        <Binding Path="IsOnCursor.Value" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="Path.entry">
            <Setter x:DataType="viewModels:EntryViewModel" Property="Fill">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource AttributeBrushConverter}" ConverterParameter="{x:Static converters:AttributeBrushConverterBrushTypes.Foreground}">
                        <Binding Path="Attributes.Value" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <ItemsControl Items="{Binding Entries, Mode=OneWay}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <views:EntryDataTemplateSelector>
                    <views:EntryDataTemplateSelector.FileDataTemplate>
                        <DataTemplate DataType="viewModels:EntryViewModel">
                            <StackPanel Height="17"
                                        Margin="0,0,32,0"
                                        Orientation="Horizontal">
                                <Viewbox Width="{Binding $parent.Height}" Height="{Binding $parent.Height}">
                                    <Path Classes="entry"
                                          Data="{StaticResource ArrowPathData}"
                                          IsVisible="{Binding IsSelected.Value}" />
                                </Viewbox>

                                <TextBlock Width="220"
                                           Margin="2,0,0,0"
                                           Classes="entry"
                                           Text="{Binding Name}"
                                           TextTrimming="CharacterEllipsis" />

                                <TextBlock Width="40"
                                           Classes="entry"
                                           Text="{Binding Extension}"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </DataTemplate>
                    </views:EntryDataTemplateSelector.FileDataTemplate>

                    <views:EntryDataTemplateSelector.DirectoryDataTemplate>
                        <DataTemplate DataType="viewModels:EntryViewModel">
                            <StackPanel Height="17"
                                        Margin="0,0,32,0"
                                        Orientation="Horizontal">
                                <Viewbox Width="{Binding $parent.Height}" Height="{Binding $parent.Height}">
                                    <Path Classes="entry"
                                          Data="{StaticResource ArrowPathData}"
                                          IsVisible="{Binding IsSelected.Value}" />
                                </Viewbox>

                                <TextBlock Width="260"
                                           Margin="2,0,0,0"
                                           Classes="entry"
                                           Text="{Binding NameWithExtension}"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </DataTemplate>
                    </views:EntryDataTemplateSelector.DirectoryDataTemplate>
                </views:EntryDataTemplateSelector>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>