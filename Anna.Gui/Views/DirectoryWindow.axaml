<Window x:Class="Anna.Views.DirectoryWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:Anna.Foundations.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Anna.Views"
        xmlns:viewModels="clr-namespace:Anna.ViewModels"
        Title="DirectoryWindow"
        Width="450"
        Height="450"
        d:DesignHeight="450"
        d:DesignWidth="450"
        x:DataType="viewModels:DirectoryWindowViewModel"
        mc:Ignorable="d">
    <Design.DataContext>
        <!-- ReSharper disable once Xaml.ConstructorWarning -->
        <viewModels:DirectoryWindowViewModel />
    </Design.DataContext>
    
    <Interaction.Behaviors>
        <behaviors:WindowDisposeDataContextOnClosedBehavior />
    </Interaction.Behaviors>

    <views:DirectoryView DataContext="{Binding ViewViewModel, Mode=OneTime}"/>
</Window>
